<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LogIn" Height="240" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label FontSize="20">
                <Label.Content>Username</Label.Content>
            </Label>
            <TextBox Width="350" x:Name="UsernameBox" FontSize="20" />
            <Label FontSize="20">
                <Label.Content>Password</Label.Content>
            </Label>
            <TextBox Width="350" x:Name="PasswordBox" FontSize="20"/>
            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <Button x:Name="Login" Content="Log In" Width="90" Margin="50,0,100,0" FontSize="20" VerticalAlignment="Center"/>
                <Button x:Name="Close" Content="Exit" Width="90" FontSize="20" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
